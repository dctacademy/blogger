<div class="page-header">
  <h2>Recent Articles</h2>
</div>

<% @articles.each do |article| %> 
  <h3>
    <%= link_to article.title, article %> 
  </h3>
   <p class="lead">
       by <%= link_to article.category.name, article.category %> 
   </p>
   <p><span class="glyphicon glyphicon-time"></span> Posted on <%= article.published_date.strftime("%A, %d %B %Y") %></p>
   <hr>
   <img class="img-responsive" src="<%= article.image_url%>" alt="">
   <hr>
   <p><%= article.description.truncate(200) %></p>

   <%= link_to article, class: "btn btn-primary" do %>
      <span class="glyphicon glyphicon-chevron-right"></span> Read More
   <% end %>
  
  <hr>
<% end %>

<%= link_to 'New Article', new_article_path %>
